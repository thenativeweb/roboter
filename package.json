  "main": "lib/roboter.js",
  "dependencies": {
    "async": "2.0.1",
    "eslint": "3.2.2",
    "eslint-config-es": "0.8.0",
    "eslint-plugin-extended": "0.2.0",
    "eslint-plugin-mocha": "4.3.0",
    "eslint-plugin-react": "6.0.0",
    "gulp": "3.9.1",
    "gulp-bump": "2.2.0",
    "gulp-depcheck": "1.1.1",
    "gulp-eslint": "3.0.1",
    "gulp-git": "1.11.0",
    "gulp-istanbul": "1.1.0",
    "gulp-mocha": "3.0.1",
    "gulp-rename": "1.2.2",
    "gulp-spawn-mocha": "3.1.0",
    "gulp-util": "3.0.7",
    "lodash": "4.14.2",
    "markdown-toc": "0.12.16",
    "minimist": "1.2.0",
    "run-sequence": "1.2.2",
    "semver": "5.3.0",
    "shelljs": "0.7.3",
    "stringify-object": "2.4.0"
  },
  "devDependencies": {
    "assertthat": "0.8.0",
    "buntstift": "0.4.0",
    "isolated": "0.3.0"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/thenativeweb/roboter.git"
  },
  "scripts": {
    "analyze": "eslint --config eslint-config-es/2015/server \"**/*.js\" --ignore-pattern \"test/integration/*/**/*.js\"",
    "test": "mocha --async-only --bail --recursive --reporter spec --ui tdd test/integration/roboterTests.js",
    "publish-patch": "npm run analyze && npm run test && npm version patch && git push --tags && git push && npm publish && node ./publish.js",
    "publish-minor": "npm run analyze && npm run test && npm version minor && git push --tags && git push && npm publish && node ./publish.js",
    "publish-major": "npm run analyze && npm run test && npm version major && git push --tags && git push && npm publish && node ./publish.js"
  },
  "keywords": [
    "build",
    "gulp"
  ],
  "license": "MIT"
}
