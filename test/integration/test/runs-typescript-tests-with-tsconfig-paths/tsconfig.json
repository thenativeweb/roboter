{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "lib": [ "esnext" ],
    "module": "commonjs",
    "outDir": "build",
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2019",
    "paths": {
      "*": [ "./types/*" ],
      "@blub": ["./blub"]
    }
  },
  "include": [
    "./**/*.ts",
    "./types",
    "./blub"
  ]
}
